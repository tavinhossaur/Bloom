<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bloom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Texto da cor primÃ¡ria para o texto da SearchView da ActionBar -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Sheet Theme -->
        <item name="sheetsPrimaryColor">@color/purple1</item>

    </style>

    <style name="Theme.BloomPesquisar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Transparent status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Transparent navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- ActionBar style -->
        <item name="actionBarWidgetTheme">@style/ActionBarStyle</item>

        <!-- Sheet Theme -->
        <item name="sheetsPrimaryColor">@color/purple1</item>
    </style>

</resources>