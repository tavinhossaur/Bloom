<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bloom" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- ActionBar style -->
        <item name="actionBarWidgetTheme">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.BloomNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Transparent status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Transparent navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.BloomPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Transparent status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Transparent navigation bar color. -->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.BloomNoActionBar">
        <item name="windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Bloom</item>
    </style>

    <!-- Texto da lista de itens do menu -->
    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Theme.Bloom">
        <item name="android:background">@color/black3</item>
        <item name="searchViewStyle">@drawable/pesquisa_style</item>
        <!-- Support library compatibility -->
        <item name="background">@color/black3</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
    </style>

    <!-- Sombra para o CardView -->
    <style name="CardViewShadow" parent="CardView">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupElevation">10dp</item>
        <item name="popupMenuBackground">@color/black6</item>
    </style>

</resources>