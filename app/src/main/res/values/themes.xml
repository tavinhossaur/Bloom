<resources>
    <!-- Base application theme. -->
    <style name="Theme.Bloom" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="actionBarWidgetTheme">@style/ActionBarStyle</item>
    </style>

    <style name="Theme.BloomNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black3</item>
        <item name="colorPrimaryVariant">@color/purple2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple1</item>
        <item name="colorSecondaryVariant">@color/purple2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Turn off android dark mode -->
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Texto da lista de itens do menu -->
    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Theme.Bloom">
        <item name="android:background">@color/black3</item>
        <!-- Support library compatibility -->
        <item name="background">@color/black3</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
    </style>

    <!-- Sombra para o CardView -->
    <style name="CardViewShadow" parent="CardView">
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
    </style>

</resources>