<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PermissaoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/purple1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagem_perm"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/bloom_lotus_icon"
            app:tint="@color/purple1" />

        <!-- Linha divisória -->
        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:background="@color/purple1"/>

        <TextView
            android:id="@+id/text_perm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:padding="25dp"
            android:text='O aplicativo precisa da permissão de acesso ao armazenamento, caso contrário não poderemos obter suas músicas!\n\nAo clicar em "Cancelar" o aplicativo será encerrado.'
            android:textSize="21.5sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="520dp">

            <Button
                android:id="@+id/btn_permitir"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp"
                android:text="Permitir"
                android:textAllCaps="false"
                android:textColor="@color/purple1"
                android:textSize="20sp"
                app:strokeColor="@color/purple1"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/btn_cancelar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_toEndOf="@id/btn_permitir"
                android:outlineSpotShadowColor="@color/purple1"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/purple1"
                android:textSize="20sp"
                app:strokeColor="@color/purple1"
                app:strokeWidth="2dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>