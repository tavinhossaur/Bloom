<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black3"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Barra dos botÃµes playlist, favoritos e randomizar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <!-- BotÃ£o "Playlists" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/configs_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_round_settings_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/purple1"
                    android:elevation="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="DefiniÃ§Ãµes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <!-- BotÃ£o "Favoritos" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/favoritos_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_round_favorite_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/purple1"
                    android:elevation="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Favoritos"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <!-- BotÃ£o "Randomizar" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/playlist_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_round_library_music_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/purple1"
                    android:elevation="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Playlists"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <!-- Linha divisÃ³ria -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    app:dividerColor="@color/black2"
                    app:dividerInsetEnd="18dp"
                    app:dividerInsetStart="18dp"
                    app:dividerThickness="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_style"
                android:backgroundTint="@color/black3"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/random_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableStart="@drawable/ic_round_play_circle_24"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/purple1"
                    android:elevation="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="ReproduÃ§Ã£o aleatÃ³ria"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/filtro_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.15"
                    android:background="@drawable/button_style"
                    android:src="@drawable/ic_round_swap_vert_24"
                    android:elevation="8dp"
                    android:textAllCaps="false"
                    android:tint="@color/white"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </LinearLayout>

            <!-- Linha divisÃ³ria -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:dividerColor="@color/black3"
                app:dividerThickness="3dp" />

            <!-- Lista de mÃºsicas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/musicas_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black3"
                android:visibility="gone"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="30dp"
                android:requiresFadingEdge="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarThumbVertical="@drawable/ic_baseline_scrollbar_24"
                android:scrollbars="vertical">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/aviso_musicas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:textSize="16sp"
                android:textColor="@color/grey3"
                android:text="VocÃª ainda nÃ£o possui mÃºsicas ðŸ¥º"/>

        </LinearLayout>

        <!-- Miniplayer -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mini_player"
            android:name="com.example.bloom.MiniPlayerFragment"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/miniplayer_style"
            android:visibility="invisible"
            android:elevation="50dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/fragment_mini_player" />

        <View
            android:id="@+id/bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>