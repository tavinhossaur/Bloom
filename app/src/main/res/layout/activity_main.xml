<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <!-- ConstraintLayout da tela principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black3">

        <!-- Escopo "primário", desconsiderando o escopo do DrawerLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Barra dos botões playlist, favoritos e randomizar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <!-- Botão "Playlists" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/playlist_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
                    android:text="Playlists"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black2"
                    android:background="@drawable/button_style"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_baseline_library_music_24"
                    android:drawableTint="@color/purple1" />

                <!-- Botão "Favoritos" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/favoritos_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp"
                    android:text="Favoritos"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black2"
                    android:background="@drawable/button_style"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_baseline_favorite_24"
                    android:drawableTint="@color/purple1"/>

                <!-- Botão "Randomizar" -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="Randomizar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black2"
                    android:background="@drawable/button_style"
                    android:drawablePadding="15dp"
                    android:drawableTop="@drawable/ic_baseline_shuffle_24"
                    android:drawableTint="@color/purple1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black3"
                android:background="@drawable/button_style"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/random_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:textSize="14sp"
                    android:text="Reproduzir aleatóriamente"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/purple1"
                    android:drawableStart="@drawable/ic_baseline_play_circle_outline_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filtro_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_style"
                    android:drawableEnd="@drawable/ic_baseline_swap_vert_24"
                    android:drawableTint="@color/white" />

            </LinearLayout>

            <!-- Linha divisória -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:dividerThickness="2dp"
                app:dividerColor="@color/purple1"/>

            <!-- Lista de músicas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/musicas_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarThumbVertical="@drawable/ic_baseline_scrollbar_24"
                android:background="@color/black3"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Componente "NavigationView" (Menu lateral) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_layout_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black3"
        android:fitsSystemWindows="true"
        app:drawerLayoutCornerSize="30dp"
        app:headerLayout="@layout/activity_navheader"
        app:insetForeground="@color/purple1"
        app:itemIconSize="25dp"
        app:itemIconTint="@color/purple1"
        app:itemTextAppearance="@style/menu_text_style"
        app:itemTextColor="@color/white"
        app:menu="@menu/main_nav_menu">

        <!-- Linha divisória -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="200dp"
            android:background="@color/white"
            app:dividerThickness="2dp"/>

        <!-- Componente "NavigationView" (Menu inferior) -->
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@color/black3"
            app:itemIconSize="25dp"
            app:itemIconTint="@color/grey3"
            app:itemTextAppearance="@style/menu_text_style"
            app:itemTextColor="@color/grey3"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>