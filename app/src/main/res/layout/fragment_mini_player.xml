<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MiniPlayerFragment">

    <!-- Mini-player do aplicativo -->
    <RelativeLayout
        android:id="@+id/mini_player"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <!-- CardView da imagem da música (Moldura) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_layout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="12dp"
            app:cardCornerRadius="10dp">

            <!-- Imagem da música -->
            <ImageView
                android:id="@+id/songImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

        </androidx.cardview.widget.CardView>

        <!-- Botões do mini-player -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <!-- Botão "previous" (Voltar/Anterior) do mini-player -->
            <ImageView
                android:id="@+id/btn_previous_mini"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:rotation="180"
                android:src="@drawable/ic_baseline_skip_next_24"
                app:tint="@color/black1" />

            <!-- Botão de play/pause do mini-player -->
            <ImageView
                android:id="@+id/play_pause_btn_mini"
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_baseline_pause_circle_filled_24"
                app:tint="@color/purple1" />

            <!-- Botão "next" (Pular/Próximo) do mini-player -->
            <ImageView
                android:id="@+id/btn_next_mini"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_skip_next_24"
                app:tint="@color/black1" />

        </LinearLayout>

        <!-- Título da música no mini-player -->
        <TextView
            android:id="@+id/minisong_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="79dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="125dp"
            android:padding="2sp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="In Bloom"
            android:textColor="#000"
            android:textSize="18sp" />

        <!-- Artista da música no mini-player -->
        <TextView
            android:id="@+id/minisong_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/minisong_title_bar"
            android:layout_marginStart="79dp"
            android:layout_marginEnd="125dp"
            android:padding="2sp"
            android:singleLine="true"
            android:text="Nirvana"
            android:textColor="#575757"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>