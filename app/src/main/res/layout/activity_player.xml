<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context=".PlayerActivity"
    android:orientation="vertical">

    <!-- Cabeçalho do player -->
    <LinearLayout
        android:id="@+id/header_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão para fechar o player -->
        <ImageView
            android:id="@+id/btn_fechar_tpl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:rotation="180"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            app:tint="@color/black1" />

        <!-- Texto que mostra o número da música atual e o total de músicas -->
        <TextView
            android:id="@+id/musica_atual_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            tools:ignore="NestedWeights" />

        <!-- Botão de opções extras -->
        <ImageView
            android:id="@+id/btn_extra_tpl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/black1" />

    </LinearLayout>

    <!-- Parte do meio do player (Detalhes da música e botão favorito) -->
    <RelativeLayout
        android:id="@+id/body_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <!-- Card que contém a foto de capa da música -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img_musica_tpl"
            android:layout_width="305dp"
            android:layout_height="305dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="30dp"
            app:cardElevation="6dp">

            <!-- Capa da música -->
            <ImageView
                android:id="@+id/img_musica_tpl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- Botão para acessar as letras da música
            <Button
                android:id="@+id/btn_letras_tpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:padding="-1dp"
                android:textSize="12sp"
                android:text="Letras"
                android:textAllCaps="false"
                android:textColor="@color/black1"
                android:drawableEnd="@drawable/ic_baseline_menu_24"
                android:drawableTint="@color/purple1"
                app:strokeWidth="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
            -->

        </androidx.cardview.widget.CardView>

        <!-- Título da música -->
        <TextView
            android:id="@+id/titulo_musica_tpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_img_musica_tpl"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/btn_fav_tpl"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textSize="23sp"
            android:textStyle="bold" />

        <!-- Artista da música -->
        <TextView
            android:id="@+id/artista_musica_tpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_musica_tpl"
            android:layout_marginStart="25dp"
            android:layout_toStartOf="@+id/btn_fav_tpl"
            android:singleLine="true"
            android:textColor="@color/purple1"
            android:textSize="17sp" />

        <!-- Álbum da música -->
        <TextView
            android:id="@+id/album_musica_tpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/artista_musica_tpl"
            android:layout_marginStart="25dp"
            android:layout_toStartOf="@+id/btn_fav_tpl"
            android:singleLine="true"
            android:textColor="@color/grey3"
            android:textSize="15sp" />

        <!-- Botão de favorito -->
        <ImageView
            android:id="@+id/btn_fav_tpl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/card_img_musica_tpl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            app:tint="@color/purple1" />

    </RelativeLayout>

    <!-- Botões de opções especiais -->
    <LinearLayout
        android:id="@+id/btn_especial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão compartilhar (Share) -->
        <ImageView
            android:id="@+id/btn_compart"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_share_24"
            app:tint="@color/black1"
            tools:ignore="NestedWeights"/>

        <!-- Botão temporizador (Timer) -->
        <ImageView
            android:id="@+id/btn_timer"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_timer_24"
            app:tint="@color/black1"/>

        <!-- Botão equalizador (Equalizer) -->
        <ImageView
            android:id="@+id/btn_equal"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_equalizer_24"
            app:tint="@color/black1"/>

        <!-- Botão adicionar à playlist (Add to playlist) -->
        <ImageView
            android:id="@+id/btn_addPl"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_playlist_add_24"
            app:tint="@color/black1"/>

    </LinearLayout>

    <!-- Barra de progresso da música -->
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0.02"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <!-- SeekBar (Barra de progresso) -->
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar_musica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/purple1"
            android:progressTint="@color/purple1"
            android:thumbTint="@color/purple1" />

        <!-- Tempo decorrente -->
        <TextView
            android:id="@+id/dec_tempo_tpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_below="@id/seekBar_musica"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <!-- Tempo final -->
        <TextView
            android:id="@+id/fim_tempo_tpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar_musica"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

    </RelativeLayout>

    <!-- Botões de controle do player -->
    <LinearLayout
        android:id="@+id/controles_btn_tpl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.03"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botão embaralhar (Shuffle) -->
        <ImageView
            android:id="@+id/btn_shuffle"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_shuffle_24"
            app:tint="@color/black1"
            tools:ignore="NestedWeights" />

        <!-- Botão "previous" (Voltar/Anterior) -->
        <ImageView
            android:id="@+id/btn_ante"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:rotation="180"
            android:src="@drawable/ic_baseline_skip_next_24"
            app:tint="@color/black1"/>

        <!-- Botão reproduzir/pausar (Play/Pause) -->
        <ImageView
            android:id="@+id/btn_pp_tpl"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_pause"
            app:tint="@color/purple1"/>

        <!-- Botão "next" (Pular/Próximo) -->
        <ImageView
            android:id="@+id/btn_prox"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_skip_next_24"
            app:tint="@color/black1"/>

        <!-- Botão repetir música (Repeat song) -->
        <ImageView
            android:id="@+id/btn_repetir"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_repeat_24"
            app:tint="@color/black1"/>

    </LinearLayout>
    
</LinearLayout>